{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rcan.dev/schema/rcan.schema.json",
  "title": "RCAN Configuration",
  "description": "Robot Configuration and Autonomy Notation \u2014 the config format for OpenCastor robots.",
  "type": "object",
  "required": [
    "rcan_version",
    "metadata",
    "agent",
    "physics",
    "drivers",
    "network",
    "rcan_protocol"
  ],
  "additionalProperties": false,
  "properties": {
    "rcan_version": {
      "type": "string",
      "description": "Semantic version of the RCAN spec this config targets.",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
    },
    "metadata": {
      "type": "object",
      "description": "Descriptive information about the robot.",
      "required": [
        "robot_name",
        "robot_uuid",
        "author",
        "license"
      ],
      "additionalProperties": false,
      "properties": {
        "robot_name": {
          "type": "string",
          "minLength": 1
        },
        "robot_uuid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
        },
        "author": {
          "type": "string",
          "minLength": 1
        },
        "license": {
          "type": "string"
        },
        "ruri": {
          "type": "string",
          "description": "Explicit RCAN URI for this robot. Auto-generated if omitted.",
          "pattern": "^rcan://[a-zA-Z0-9_*-]+\\.[a-zA-Z0-9_*-]+\\.[a-zA-Z0-9_*-]+(/[a-zA-Z0-9_/-]*)?$"
        },
        "manufacturer": {
          "type": "string",
          "description": "Manufacturer or organisation identifier for RURI generation."
        },
        "model": {
          "type": "string",
          "description": "Robot model name for RURI generation."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "created_at": {
          "type": "string",
          "description": "ISO 8601 timestamp of config creation"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this robot configuration."
        }
      }
    },
    "agent": {
      "type": "object",
      "description": "AI provider and model configuration.",
      "required": [
        "provider",
        "model"
      ],
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "google",
            "openai",
            "anthropic",
            "ollama",
            "openrouter",
            "huggingface",
            "llamacpp",
            "llama.cpp",
            "llama-cpp",
            "mlx",
            "mlx-lm",
            "vllm-mlx",
            "claude_oauth"
          ]
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "vision_enabled": {
          "type": "boolean",
          "default": true
        },
        "latency_budget_ms": {
          "type": "integer",
          "minimum": 0
        },
        "safety_stop": {
          "type": "boolean",
          "default": true
        },
        "api_key": {
          "type": "string",
          "description": "Fallback API key. Prefer env vars instead."
        },
        "base_url": {
          "type": "string",
          "description": "Custom API base URL for providers that support it."
        },
        "secondary_models": {
          "type": "array",
          "description": "Optional secondary AI models for specialized tasks",
          "items": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string"
              },
              "model": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "tiered_brain": {
      "type": "object",
      "description": "Tiered brain architecture \u2014 reactive (<1ms), fast (~500ms), planner (~12s).",
      "additionalProperties": false,
      "properties": {
        "planner_interval": {
          "type": "integer",
          "minimum": 1,
          "description": "Run the planner every N ticks."
        },
        "uncertainty_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence threshold below which the planner is invoked."
        }
      }
    },
    "reactive": {
      "type": "object",
      "description": "Reactive layer configuration (Layer 0) \u2014 rule-based safety and hardware-accelerated vision.",
      "additionalProperties": false,
      "properties": {
        "hailo_vision": {
          "type": "boolean",
          "default": false,
          "description": "Enable Hailo-8 NPU YOLOv8 object detection. Opt-in to avoid driver issues on non-Hailo hardware."
        },
        "hailo_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum detection confidence for Hailo-8 vision."
        },
        "hailo_model_path": {
          "type": "string",
          "description": "Path to the .hef model file for Hailo-8."
        },
        "min_obstacle_m": {
          "type": "number",
          "minimum": 0,
          "description": "Minimum obstacle distance in meters before emergency stop."
        },
        "fallback_provider": {
          "type": "object",
          "description": "Fallback AI provider when primary is unavailable.",
          "properties": {
            "provider": {
              "type": "string"
            },
            "model": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "learner": {
      "type": "object",
      "description": "Self-improving loop (Sisyphus pattern). Disabled by default \u2014 enable via wizard or `castor improve --enable`.",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable self-improving loop. Disabled by default."
        },
        "provider": {
          "type": "string",
          "description": "AI provider for episode analysis."
        },
        "model": {
          "type": "string",
          "description": "Model for episode analysis."
        },
        "cadence": {
          "type": "string",
          "description": "Analysis cadence (every_episode, every_5, every_10)."
        },
        "cadence_n": {
          "type": "integer",
          "minimum": 1,
          "description": "Analyze every N episodes."
        },
        "max_retries": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum retry attempts for failed patches."
        },
        "auto_apply_config": {
          "type": "boolean",
          "default": true,
          "description": "Auto-apply safe config tuning patches."
        },
        "auto_apply_behavior": {
          "type": "boolean",
          "default": false,
          "description": "Auto-apply behavior rule patches."
        },
        "auto_apply_code": {
          "type": "boolean",
          "default": false,
          "description": "Auto-apply code patches. Always false recommended \u2014 requires human review."
        }
      }
    },
    "physics": {
      "type": "object",
      "description": "Physical characteristics of the robot.",
      "required": [
        "type",
        "dof"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "differential_drive",
            "ackermann",
            "serial_manipulator",
            "parallel_manipulator",
            "holonomic",
            "custom",
            "mecanum",
            "four_wheel_drive",
            "self_balancing",
            "omni"
          ]
        },
        "dof": {
          "type": "integer",
          "minimum": 1
        },
        "chassis": {
          "type": "object",
          "description": "Chassis dimensions for mobile robots.",
          "properties": {
            "wheel_base_mm": {
              "type": "number",
              "minimum": 0
            },
            "wheelbase_mm": {
              "type": "number",
              "minimum": 0
            },
            "track_width_mm": {
              "type": "number",
              "minimum": 0
            },
            "wheel_radius_mm": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "kinematics": {
          "type": "array",
          "description": "Link definitions for manipulator arms.",
          "items": {
            "type": "object",
            "required": [
              "id",
              "length_mm",
              "axis"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "length_mm": {
                "type": "number",
                "minimum": 0
              },
              "mass_g": {
                "type": "number",
                "minimum": 0
              },
              "axis": {
                "type": "string",
                "enum": [
                  "x",
                  "y",
                  "z"
                ]
              },
              "limits_deg": {
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 2,
                "maxItems": 2
              }
            },
            "additionalProperties": false
          }
        }
      }
    },
    "drivers": {
      "type": "array",
      "description": "Hardware driver configurations.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "protocol"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "link_id": {
            "type": "string"
          },
          "protocol": {
            "type": "string",
            "minLength": 1
          },
          "port": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "integer",
                "minimum": 0
              }
            ]
          },
          "address": {
            "type": "string"
          },
          "frequency": {
            "type": "integer",
            "minimum": 0
          },
          "baud_rate": {
            "type": "integer",
            "minimum": 0
          },
          "hardware_id": {
            "type": "integer",
            "minimum": 0
          },
          "channels": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "string"
                }
              ]
            }
          },
          "steering_channel": {
            "type": "integer",
            "minimum": 0
          },
          "steering_center_us": {
            "type": "integer"
          },
          "steering_range_us": {
            "type": "integer",
            "minimum": 0
          },
          "steering_invert": {
            "type": "boolean"
          },
          "throttle_channel": {
            "type": "integer",
            "minimum": 0
          },
          "throttle_neutral_us": {
            "type": "integer"
          },
          "throttle_max_us": {
            "type": "integer"
          },
          "throttle_min_us": {
            "type": "integer"
          },
          "throttle_deadzone": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "additionalProperties": true
      }
    },
    "camera": {
      "type": "object",
      "description": "Camera configuration.",
      "properties": {
        "type": {
          "type": "string",
          "description": "Camera type (e.g. usb, picam, oakd, csi)."
        },
        "resolution": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "minItems": 2,
          "maxItems": 2
        },
        "framerate": {
          "type": "integer",
          "minimum": 1
        },
        "depth_enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable stereo depth (OAK-D and similar)."
        }
      },
      "additionalProperties": false
    },
    "audio": {
      "type": "object",
      "description": "Text-to-speech and audio output configuration.",
      "properties": {
        "tts_enabled": {
          "type": "boolean"
        },
        "engine": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "output_device": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "channels": {
      "type": "object",
      "description": "Messaging channel configurations.",
      "properties": {
        "whatsapp": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        },
        "telegram": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        },
        "discord": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        },
        "slack": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "network": {
      "type": "object",
      "description": "Network and telemetry settings.",
      "required": [
        "telemetry_stream"
      ],
      "additionalProperties": false,
      "properties": {
        "telemetry_stream": {
          "type": "boolean"
        },
        "sim_to_real_sync": {
          "type": "boolean"
        },
        "allow_remote_override": {
          "type": "boolean"
        }
      }
    },
    "rcan_protocol": {
      "type": "object",
      "description": "RCAN protocol settings. Required for safety invariants, RURI identity, RBAC, and capability declaration.",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8000,
          "description": "Port for the RCAN protocol endpoint."
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Advertised capabilities (e.g. nav, vision, teleop, chat, status)."
        },
        "enable_mdns": {
          "type": "boolean",
          "default": false,
          "description": "Advertise and discover peers via mDNS (_rcan._tcp.local)."
        },
        "enable_jwt": {
          "type": "boolean",
          "default": false,
          "description": "Enable JWT authentication for the API."
        },
        "registry": {
          "type": "string",
          "description": "Optional URL of an RCAN fleet registry."
        }
      }
    },
    "agent_roster": {
      "type": "array",
      "description": "Agents to spawn at startup (Phase 2-3).",
      "items": {
        "type": "object",
        "required": [
          "name",
          "enabled"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "config": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "swarm": {
      "type": "object",
      "description": "Multi-robot swarm coordination (Phase 4).",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "sync_interval_s": {
          "type": "number",
          "minimum": 1
        },
        "patch_sync": {
          "type": "boolean",
          "default": false
        },
        "shared_memory_path": {
          "type": "string"
        }
      }
    },
    "connection": {
      "type": "object",
      "description": "Connection type for the robot runtime.",
      "properties": {
        "type": {
          "type": "string",
          "description": "e.g. local, ssh, serial"
        }
      },
      "additionalProperties": true
    },
    "notes": {
      "description": "Human-readable notes or structured setup info.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": true
        }
      ]
    },
    "ros2": {
      "type": "object",
      "description": "ROS2 integration settings.",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "namespace": {
          "type": "string"
        },
        "domain_id": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    }
  }
}