{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "OpenCastor Prometheus data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": ""},
    {"type": "panel", "id": "gauge", "name": "Gauge", "version": ""},
    {"type": "panel", "id": "stat", "name": "Stat", "version": ""},
    {"type": "panel", "id": "table", "name": "Table", "version": ""}
  ],
  "annotations": {"list": []},
  "description": "OpenCastor Robot Runtime Dashboard â€” latency, commands, errors, battery, provider health",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "id": 100,
      "title": "Overview",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 200},
              {"color": "red", "value": 500}
            ]
          },
          "unit": "ms"
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 1},
      "id": 1,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "orientation": "auto", "textMode": "auto"},
      "title": "Loop Latency (p50)",
      "type": "stat",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "histogram_quantile(0.5, rate(loop_latency_ms_bucket[1m]))",
          "legendFormat": "p50 ms"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1000},
              {"color": "red", "value": 2000}
            ]
          },
          "unit": "ms"
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 1},
      "id": 2,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "orientation": "auto", "textMode": "auto"},
      "title": "Loop Latency (p95)",
      "type": "stat",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "histogram_quantile(0.95, rate(loop_latency_ms_bucket[1m]))",
          "legendFormat": "p95 ms"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 3.5},
              {"color": "green", "value": 7.4}
            ]
          },
          "unit": "volt",
          "min": 0,
          "max": 12.6
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 1},
      "id": 3,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "orientation": "auto"},
      "title": "Battery Voltage",
      "type": "gauge",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "battery_voltage_v",
          "legendFormat": "Battery V"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 1},
      "id": 4,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "background"},
      "title": "E-Stop Active",
      "type": "stat",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "estop_active",
          "legendFormat": "E-Stop"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {"defaults": {"unit": "reqps"}},
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 1},
      "id": 5,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}},
      "title": "Brain Calls / sec",
      "type": "stat",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "rate(brain_calls_total[1m])",
          "legendFormat": "calls/s"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 1},
      "id": 6,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}},
      "title": "Errors / min",
      "type": "stat",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "rate(errors_total[1m]) * 60",
          "legendFormat": "errors/min"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5},
      "id": 101,
      "title": "Latency & Throughput",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {"lineWidth": 2}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "id": 10,
      "options": {"tooltip": {"mode": "multi"}, "legend": {"displayMode": "list"}},
      "title": "Loop Latency Distribution",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "histogram_quantile(0.5, rate(loop_latency_ms_bucket[1m]))",
          "legendFormat": "p50"
        },
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "histogram_quantile(0.95, rate(loop_latency_ms_bucket[1m]))",
          "legendFormat": "p95"
        },
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "histogram_quantile(0.99, rate(loop_latency_ms_bucket[1m]))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {"defaults": {"unit": "reqps", "custom": {"lineWidth": 2}}},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "id": 11,
      "title": "Commands & Motor Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "rate(brain_calls_total[1m])",
          "legendFormat": "brain calls/s"
        },
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "rate(motor_commands_total[1m])",
          "legendFormat": "motor cmds/s"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 14},
      "id": 102,
      "title": "Errors & Health",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {"defaults": {"unit": "short", "custom": {"lineWidth": 2}}},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 15},
      "id": 20,
      "title": "Error Rate by Source",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "rate(errors_total[1m]) * 60",
          "legendFormat": "errors/min {{source}}"
        }
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 15},
      "id": 21,
      "title": "Episodes Logged",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "episodes_total",
          "legendFormat": "total episodes"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "tags": ["opencastor", "robotics", "ai"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "DS_PROMETHEUS",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": {"from": "now-30m", "to": "now"},
  "timepicker": {},
  "timezone": "browser",
  "title": "OpenCastor Robot Dashboard",
  "uid": "opencastor-v1",
  "version": 1
}
